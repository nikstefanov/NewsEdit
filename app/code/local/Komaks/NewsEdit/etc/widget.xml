        <name>Author view</name>
        <description>Author view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <author_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Author</label>
                <type>label</type>
                <helper_block>
                    <type>komaks_newsedit/adminhtml_author_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Author</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </author_id>
        </parameters>
